<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
	<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
 		<script defer src="/js/main.js"></script>
	<title>Coingo</title>
</head>
<body>
	<section>
  <!-- Logo -->
	<div class="logo-container">
		<h5 class="logo-name">COING</h5>
		<img class="logo-img" src="/images/coin.png" alt="coin">
  </div>
  <!-- Register Form -->
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="/members" method="GET">
			<h4>Create Account</h4>
			<div class="social-container">
				<a href="/auth/facebook" class="social"><i class="lab la-facebook 64"></i></a>
				<a href="/auth/google" class="social"><i class="la la-google"></i></a>
				<a href="/auth/linkedin" class="social"><i class="la la-linkedin"></i></a>
			</div>
			<!-- <span>or use your email for registration</span>
			<input type="text" placeholder="Name" />
			<input type="email" placeholder="Email" />
			<input type="password" placeholder="Password" />
			<button>Sign Up</button> -->
		</form>
  </div>
    <!-- Login Form -->
	<div class="form-container sign-in-container">
		<form action="/members" method="GET">
			<h4>Sign in</h4>
			<div class="social-container">
				<a href="/auth/facebook" class="social"><i class="lab la-facebook"></i></a>
				<a href="/auth/google" class="social"><i class="la la-google"></i></a>
				<a href="/auth/linkedin" class="social"><i class="la la-linkedin"></i></a>
			</div>
			<!-- <span>or use your account</span>
			<input type="email" placeholder="Email" />
			<input type="password" placeholder="Password" />
			<a href="#">Forgot your password?</a>
			<button>Sign In</button> -->
		</form>
  </div>
    <!-- Registration Text -->
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
      </div>
    <!-- Registration Text -->
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>
</section>

